<h1>Listing destinations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Time spent</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Itinerary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= destination.name %></td>
    <td><%= destination.category %></td>
    <td><%= destination.description %></td>
    <td><%= destination.time_spent %></td>
    <td><%= destination.latitude %></td>
    <td><%= destination.longitude %></td>
    <td><%= destination.itinerary %></td>
    <td><%= link_to 'Show', destination %></td>
    <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
    <td><%= link_to 'Destroy', destination, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

